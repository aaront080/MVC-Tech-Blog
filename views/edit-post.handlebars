<article>
    <a href="/dashboard">back to dashboard</a>
    <h2>Edit post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}"/>
        </div>
        <div>
            <textarea name="post-text">{{post.post_text}}</textarea>
        </div>
        <div>
            Posted on {{format_date post.created_at}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</article>
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button name="submit">add comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>
<script src="/javascript/comment.js"></script>